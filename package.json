{
  "name": "node-webcodecs",
  "version": "0.1.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:native": "cmake-js compile",
    "build:native:debug": "cmake-js compile --debug",
    "build:native:symbols": "cmake-js compile -- -DCMAKE_BUILD_TYPE=RelWithDebInfo",
    "build:native:asan": "cmake-js compile -- -DENABLE_ASAN=ON",
    "build:native:ubsan": "cmake-js compile -- -DENABLE_UBSAN=ON",
    "build:ts": "tsc",
    "build": "npm run build:native && npm run build:ts",
    "build:debug": "npm run build:native:debug && npm run build:ts",
    "build:coverage": "cmake-js compile -- -DENABLE_COVERAGE=ON",
    "rebuild": "cmake-js rebuild",
    "clean": "cmake-js clean && rm -rf dist",
    "test": "vitest run --config test/vitest.config.ts",
    "test:stress": "vitest run test/stress/ --config test/vitest.config.ts",
    "test:asan": "npm run build:native:asan && npm run build:ts && npm test",
    "test:ubsan": "npm run build:native:ubsan && npm run build:ts && npm test",
    "test:coverage:js": "c8 npm test",
    "test:coverage:cpp": "npm run build:coverage && npm test && lcov --capture --directory build --output-file coverage/cpp.info --no-external && genhtml coverage/cpp.info --output-directory coverage/cpp",
    "coverage": "npm run test:coverage:js && c8 report --reporter=html",
    "bench": "npx tsx bench/index.ts",
    "bench:gc": "node --expose-gc --import tsx bench/index.ts",
    "lint": "gts lint",
    "fix": "gts fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "c8": "^10.1.2",
    "cmake-js": "^7.3.0",
    "gts": "^7.0.0",
    "mediabunny": "^1.25.4",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
