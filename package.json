{
  "name": "node-webcodecs-monorepo",
  "private": true,
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "workspaces": [
    "packages/node-webcodecs"
  ],
  "scripts": {
    "build": "npm run build -w packages/node-webcodecs",
    "build:native": "npm run build:native -w packages/node-webcodecs",
    "build:ts": "npm run build:ts -w packages/node-webcodecs",
    "build:debug": "npm run build:debug -w packages/node-webcodecs",
    "clean": "npm run clean -w packages/node-webcodecs",
    "test": "npm run test -w packages/node-webcodecs",
    "test:fast": "npm run test:fast -w packages/node-webcodecs",
    "lint": "npm run lint -w packages/node-webcodecs",
    "publish:main": "npm publish -w packages/node-webcodecs --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cpplint/cli": "^0.1.0",
    "@types/node": "^25.0.3",
    "c8": "^10.1.3",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "prebuildify": "^6.0.1",
    "prettier": "^3.7.4",
    "tsd": "^0.33.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
