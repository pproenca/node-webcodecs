{
  "name": "@pproenca/node-webcodecs",
  "version": "0.1.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "node install/check.js && node install/build.js",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "build:ts": "tsc",
    "rebuild": "npm run clean && npm run build",
    "clean": "node-gyp clean && rm -rf dist",
    "test": "vitest run --config test/vitest.config.ts",
    "test:stress": "vitest run test/stress/ --config test/vitest.config.ts",
    "test:coverage:js": "c8 npm test",
    "coverage": "npm run test:coverage:js && c8 report --reporter=html",
    "lint": "npm run lint-js && npm run lint-cpp",
    "lint-js": "biome check --write lib/ test/",
    "lint-cpp": "cpplint --quiet src/*.h src/*.cc",
    "format": "biome format --write lib/ test/",
    "typecheck": "tsc --noEmit",
    "lint-types": "tsd",
    "docs-build": "typedoc",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "tsd": {
    "directory": "test/types"
  },
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "license": "MIT",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "author": "Pedro Proenca",
  "files": [
    "dist",
    "install",
    "src/*.cc",
    "src/*.h",
    "binding.gyp",
    "build/Release/*.node"
  ],
  "dependencies": {
    "gts": "^7.0.0",
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.7.5",
    "c8": "^10.1.2",
    "express": "^5.2.1",
    "mediabunny": "^1.25.4",
    "node-gyp": "^10.0.0",
    "tsd": "^0.33.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.15",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "gypfile": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
