{
  "name": "@pproenca/node-webcodecs",
  "version": "0.1.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:ts": "tsc",
    "install": "node install/check.js || node install/build.js",
    "clean": "rm -rf src/build/ .nyc_output/ coverage/ test/fixtures/output.*",
    "test": "npm run lint && npm run test-unit",
    "lint": "npm run lint-cpp && npm run lint-js && npm run lint-types",
    "lint-cpp": "cpplint --recursive src/",
    "lint-js": "biome lint .",
    "lint-types": "tsd",
    "test-unit": "vitest run",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "package-from-local-build": "node npm/from-local-build.js",
    "package-release-notes": "node npm/release-notes.js"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "tsd": {
    "directory": "test/types"
  },
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "license": "MIT",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "author": "Pedro Proenca",
  "files": [
    "install",
    "lib",
    "dist",
    "src/*.{cc,h,gyp}"
  ],
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.7.5",
    "c8": "^10.1.2",
    "express": "^5.2.1",
    "mediabunny": "^1.25.4",
    "node-gyp": "^10.0.0",
    "tsd": "^0.33.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.15",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "gypfile": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
