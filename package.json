{
  "name": "@pproenca/node-webcodecs",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "version": "0.1.1-alpha.3",
  "author": "Pedro Proenca",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "scripts": {
    "//": "Run 'npm run check' to validate changes before pushing (matches CI)",
    "build": "node-gyp rebuild && tsc",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc",
    "build:debug": "node-gyp rebuild --debug && tsc",
    "install": "node-gyp-build",
    "clean": "rm -rf src/build/ .nyc_output/ coverage/ test/fixtures/output.*",
    "check": "npm run lint && npm test",
    "test": "vitest run --config test/vitest.config.ts && node test/guardrails/fuzzer.js && node test/guardrails/event_loop_lag.js",
    "test:fast": "vitest run --config test/vitest.config.ts",
    "test:stress": "vitest run --config test/vitest.stress.config.ts",
    "test:unit": "vitest run --config test/vitest.config.ts unit/",
    "test:contracts": "node test/contracts/video_encoder/state_machine.js && node test/contracts/audio_encoder/state_machine.js && node test/contracts/video_decoder/state_machine.js && node test/contracts/audio_decoder/state_machine.js",
    "lint": "cpplint --quiet src/*.h src/*.cc && biome lint && tsd && prettier --check \"**/*.md\"",
    "format": "prettier --write \"**/*.md\"",
    "version:bump": "node scripts/bump-version.js",
    "create-platform-packages": "node scripts/create-platform-packages.mjs"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "prebuilds",
    "lib",
    "dist",
    "src/*.{cc,h,gyp}",
    "binding.gyp"
  ],
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "tsd": {
    "directory": "test/types"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cpplint/cli": "^0.1.0",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^4.0.16",
    "c8": "^10.1.3",
    "express": "^5.2.1",
    "mediabunny": "^1.27.3",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "prebuildify": "^6.0.1",
    "prettier": "^3.7.4",
    "tsd": "^0.33.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "license": "MIT",
  "engines": {
    "node": "^20.17.0 || ^22.9.0 || >=24"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
