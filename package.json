{
  "name": "@pproenca/node-webcodecs",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "version": "0.1.1-alpha.2",
  "author": "Pedro Proenca",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:ts": "tsc",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "install": "node install/check.js || npm run build",
    "clean": "rm -rf src/build/ .nyc_output/ coverage/ test/fixtures/output.*",
    "test": "npm run lint && npm run test-fast && npm run test-guardrails",
    "test-fast": "vitest run --config test/vitest.config.ts",
    "test-unit": "vitest run --config test/vitest.config.ts unit/",
    "test-golden": "vitest run --config test/vitest.config.ts golden/",
    "test-reference": "INCLUDE_REFERENCE=true vitest run --config test/vitest.config.ts reference/",
    "test-all": "npm run test-fast && npm run test-guardrails && npm run test-contracts",
    "test-guardrails": "node --expose-gc test/guardrails/memory_sentinel.js && node test/guardrails/fuzzer.js && node test/guardrails/event_loop_lag.js",
    "test-contracts": "node test/contracts/video_encoder/state_machine.js && node test/contracts/audio_encoder/state_machine.js && node test/contracts/video_decoder/state_machine.js && node test/contracts/audio_decoder/state_machine.js",
    "test-benchmark": "node --expose-gc test/guardrails/benchmark.js",
    "test-leak": "./test/leak/leak.sh",
    "test-leak-macos": "./test/leak/leaks-macos.sh",
    "test-stress": "vitest run --config test/vitest.config.ts stress/",
    "test-coverage": "vitest run --config test/vitest.config.ts --coverage",
    "lint": "cpplint --quiet src/*.h src/*.cc && biome lint && tsd && prettier --check \"**/*.md\"",
    "format": "prettier --write \"**/*.md\"",
    "package-from-local-build": "node npm/from-local-build.js",
    "package-release-notes": "node npm/release-notes.js",
    "version:bump": "node scripts/bump-version.js",
    "compliance": "npx tsx scripts/fetch-webcodecs-specs.ts --process && echo 'âœ“ Specs updated. Run /check-compliance to analyze'"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "install",
    "lib",
    "dist",
    "src/*.{cc,h,gyp}"
  ],
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "tsd": {
    "directory": "test/types"
  },
  "dependencies": {
    "detect-libc": "^2.1.2",
    "node-gyp-build": "^4.8.4"
  },
  "optionalDependencies": {
    "@pproenca/node-webcodecs-darwin-arm64": "0.1.1-alpha.2",
    "@pproenca/node-webcodecs-darwin-x64": "0.1.1-alpha.2",
    "@pproenca/node-webcodecs-linux-x64": "0.1.1-alpha.2",
    "@pproenca/node-webcodecs-linuxmusl-x64": "0.1.1-alpha.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cpplint/cli": "^0.1.0",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^4.0.16",
    "c8": "^10.1.3",
    "express": "^5.2.1",
    "mediabunny": "^1.27.3",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "prettier": "^3.7.4",
    "tsd": "^0.33.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "license": "MIT",
  "engines": {
    "node": "^20.17.0 || ^22.9.0 || >=24"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
