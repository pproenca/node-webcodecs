{
  "name": "node-webcodecs",
  "version": "0.1.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:native": "cmake-js compile",
    "build:ts": "tsc",
    "build": "npm run build:native && npm run build:ts",
    "build:coverage": "cmake-js compile -- -DENABLE_COVERAGE=ON",
    "test": "vitest run --config test/vitest.config.ts",
    "test:coverage:js": "c8 npm test",
    "test:coverage:cpp": "npm run build:coverage && npm test && lcov --capture --directory build --output-file coverage/cpp.info --no-external && genhtml coverage/cpp.info --output-directory coverage/cpp",
    "coverage": "npm run test:coverage:js && c8 report --reporter=html",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "c8": "^10.1.2",
    "cmake-js": "^7.3.0",
    "gts": "^7.0.0",
    "mediabunny": "^1.25.4",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
