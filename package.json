{
  "name": "@pproenca/node-webcodecs",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "version": "0.1.0",
  "author": "Pedro Proenca",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:ts": "tsc",
    "build:native": "node-gyp rebuild",
    "build:native:debug": "node-gyp rebuild --debug",
    "install": "node install/check.js || npm run build",
    "clean": "rm -rf src/build/ .nyc_output/ coverage/ test/fixtures/output.*",
    "test": "npm run test-all",
    "test-unit": "vitest run --config test/vitest.config.ts --include 'unit/**/*.test.ts'",
    "test-golden": "vitest run --config test/vitest.config.ts --include 'golden/**/*.test.ts'",
    "test-reference": "vitest run --config test/vitest.config.ts --include 'reference/**/*.test.ts'",
    "test-integration": "vitest run --config test/vitest.config.ts --include '**/integration/**/*.test.ts'",
    "test-fast": "vitest run --config test/vitest.config.ts --include 'unit/**/*.test.ts' --include 'golden/**/*.test.ts'",
    "test-all": "vitest run --config test/vitest.config.ts",
    "lint": "npm run lint-cpp && npm run lint-js && npm run lint-types",
    "lint-cpp": "cpplint --quiet src/*.h src/*.cc",
    "lint-js": "biome lint",
    "lint-types": "tsd",
    "package-from-local-build": "node npm/from-local-build.js",
    "package-release-notes": "node npm/release-notes.js"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "install",
    "lib",
    "dist",
    "src/*.{cc,h,gyp}"
  ],
  "keywords": [
    "webcodecs",
    "video",
    "encoder",
    "ffmpeg",
    "nodejs"
  ],
  "tsd": {
    "directory": "test/types"
  },
  "dependencies": {
    "detect-libc": "^2.0.3",
    "node-gyp-build": "^4.8.0"
  },
  "optionalDependencies": {
    "@pproenca/node-webcodecs-darwin-arm64": "0.1.0",
    "@pproenca/node-webcodecs-darwin-x64": "0.1.0",
    "@pproenca/node-webcodecs-linux-x64": "0.1.0",
    "@pproenca/node-webcodecs-linuxmusl-x64": "0.1.0",
    "@pproenca/node-webcodecs-win32-x64": "0.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cpplint/cli": "^0.1.0",
    "@types/node": "*",
    "c8": "^10.1.2",
    "express": "^5.2.1",
    "mediabunny": "^1.25.4",
    "node-addon-api": "^8.0.0",
    "node-gyp": "^10.0.0",
    "tsd": "^0.33.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.15",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  },
  "license": "MIT",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
