{
  "name": "@pproenca/node-webcodecs",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "version": "1.0.0-alpha.1",
  "author": "Pedro Proenca",
  "homepage": "https://github.com/pproenca/node-webcodecs",
  "repository": {
    "type": "git",
    "url": "git://github.com/pproenca/node-webcodecs.git",
    "directory": "packages/node-webcodecs"
  },
  "bugs": {
    "url": "https://github.com/pproenca/node-webcodecs/issues"
  },
  "scripts": {
    "build": "node-gyp rebuild && tsc",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc",
    "build:debug": "node-gyp rebuild --debug && tsc",
    "clean": "rm -rf build/ dist/ .nyc_output/ coverage/ prebuilds/",
    "test": "tsx --test --test-concurrency=1 --import ./test/setup.ts --test-timeout=30000 test/**/*.test.ts",
    "test:fast": "tsx --test --import ./test/setup.ts test/golden/*.test.ts test/unit/*.test.ts",
    "test:golden": "tsx --test --import ./test/setup.ts test/golden/*.test.ts",
    "test:unit": "tsx --test --import ./test/setup.ts test/unit/*.test.ts",
    "test:stress": "tsx --test --test-concurrency=1 --import ./test/setup.ts --test-timeout=120000 test/stress/*.test.ts",
    "test:contracts": "node --test test/contracts/**/*.js",
    "test:guardrails": "node --test test/guardrails/*.js",
    "test:coverage": "c8 npm run test:fast",
    "lint": "npm run lint:cpp && npm run lint:ts && npm run lint:types",
    "lint:cpp": "cpplint --quiet src/*.h src/*.cc",
    "lint:ts": "biome lint lib/",
    "lint:types": "tsd --files test/types/**/*.test-d.ts"
  },
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "lib/",
    "dist/",
    "src/",
    "binding.gyp",
    "LICENSE",
    "NOTICE",
    "SUPPORTED_CODECS.md",
    "README.md"
  ],
  "keywords": [
    "webcodecs",
    "video",
    "audio",
    "encoder",
    "decoder",
    "ffmpeg",
    "nodejs",
    "native"
  ],
  "optionalDependencies": {
    "@pproenca/node-webcodecs-darwin-arm64": "1.0.0-alpha.1",
    "@pproenca/node-webcodecs-darwin-x64": "1.0.0-alpha.1",
    "@pproenca/node-webcodecs-linux-x64": "1.0.0-alpha.1",
    "@pproenca/node-webcodecs-linux-x64-musl": "1.0.0-alpha.1"
  },
  "dependencies": {
    "detect-libc": "^2.0.4",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "tsx": "^4.21.0"
  },
  "license": "GPL-2.0-or-later",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
